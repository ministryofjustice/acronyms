      <script>
         document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');

      </script>
      <a href="#main-content" class="govuk-skip-link">Skip to main content</a>
      <header class="govuk-header " role="banner" data-module="govuk-header">
         <div class="govuk-header__container govuk-width-container">
            <div class="govuk-header__content">
               <a href="#" class="govuk-header__link govuk-header__link--service-name">
               Ministry of Justice Acronyms
               </a>
            </div>
         </div>
      </header>

<!-- ---------------------------------------------------------------------------------------- -->
<!-- Be careful with editing anything past this point as much of it is templated using Jinja2 -->
<!-- ---------------------------------------------------------------------------------------- -->

      <div class="govuk-width-container ">
         <main class="govuk-main-wrapper " id="main-content" role="main">
            <!--<h1 class="govuk-heading-xl">Ministry of Justice Acronyms</h1> -->
            <div class="govuk-form-group">
               <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--l" for="event-name">
                  Search for an Acronym:
                  </label>
               </h1>
               <div class="govuk-hint">
                  If you have a GitHub account, you can update this list by clicking
                  <a href="https://github.com/ministryofjustice/acronyms/edit/main/README.md">here.</a><br>
                  Last Updated: {{ last_updated }}
               </div>
               <input class="govuk-input" id="searchInput" onkeyup="searchFunction()" type="text">
            </div>

            <table class="govuk-table" id="acronymTable">
               <thead class="govuk-table__head">
                  <tr class="govuk-table__row">
                     <th scope="col" class="govuk-table__header">Abbreviation</th>
                     <th scope="col" class="govuk-table__header">Definition</th>
                     <th scope="col" class="govuk-table__header">Info</th>
                  </tr>
               </thead>
               <tbody class="govuk-table__body">
               {% for item in list %}
                  <tr class="govuk-table__row">
                     {% if item.url == ""%}
                     <th scope="row" class="govuk-table__header">{{ item.abbreviation }}</th>
                     {% else %}
                     <th scope="row" class="govuk-table__cell"><a href="{{ item.url }}">{{ item.abbreviation }}</a></th>
                     {% endif %}
                     <td class="govuk-table__cell">{{ item.definition  }}</td>
                     <td class="govuk-table__cell">{{ item.info }}</td>
                  </tr>
               {% endfor %}
               </tbody>
            </table>
         </main>
      </div>
